<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<VBox fx:controller="sample.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center">
    <VBox>

        <Label text="Search for an Item: "/>
        <TextField/>

        <HBox>
            <HBox>
                <Label text="ID: "/>
                <TextField/>
            </HBox>
            <HBox>
                <Label text="Type: "/>
                <TextField/>
            </HBox>
            <HBox>
                <Label text="Title: "/>
                <TextField/>
            </HBox>
        </HBox>

        <HBox>
            <HBox>
                <Label text="Description: "/>
                <TextField/>
            </HBox>
            <HBox>
                <Label text="Notes: "/>
                <TextField/>
            </HBox>
            <HBox>
                <Label text="Date Ordered:"/>
                <TextField/>
            </HBox>
        </HBox>

        <HBox>
            <HBox>
                <Label text="Expiry Date(s): "/>
                <TextField/>
            </HBox>
            <HBox>
                <Label text="Date Acquired: "/>
                <TextField/>
            </HBox>
            <HBox>
                <Label text="Precautions/Safety: "/>
                <TextField/>
            </HBox>
        </HBox>

        <HBox>
            <HBox>
                <Label text="Usage/Labs: "/>
                <TextField/>
            </HBox>
            <HBox>
                <Label text="Department(s): "/>
                <TextField/>
            </HBox>
        </HBox>

        <Button text="Enter Data to Chemventory" />

        <VBox alignment="CENTER" spacing="20" id="textAreaBox">
            <TextArea fx:id="inventoryOutput" minHeight="500"/>
        </VBox>

    </VBox>
</VBox>